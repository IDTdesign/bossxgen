<!DOCTYPE html>
<html class="no-js" lang="">
<head>
    <!-- Rendered with Eco -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Properities -->
    <title><%= @site.title %></title>
    <meta name="description" content="<%= @site.description %>" />
    <meta name="keywords" content="<%= @site.keywords %>" />

    <!-- DocPad Meta -->
    <%- @getBlock('meta').toHTML() %>

    <!-- DocPad Styles + Our Own -->
    <%- @getBlock('styles').add(@getUrl(@site.styles)).add(@getUrl(@document.styles)).toHTML() %>

    <!--script src="<%= @getUrl('/vendor/modernizr/modernizr.min.js') %>"></script>
    <script src="<%= @getUrl('/icons/svg-icons.js') %>"></script-->

    <script src="/resizer/webcomponents-lite.min.js"></script>
    <link rel="import" href="/resizer/components-dev.html">

</head>
<body>
    <% #@partial('site/svgcontainer') %>
    <article>
        <%- @content %>
    </article>

    <script>
        window.addEventListener('WebComponentsReady', function(e) {
          var resizer = new DeviceResizer({
            defaultURL: 'http://localhost:8888/uicomponents<%- @document.url %>/demo.html',
            defaultWindowWidth: 840,
            defaultHandsetWidth: 360,
            defaulrDevice: 'window',
            deviceProfiles: [
              {
                device: 'window',
                size: 1600
              },
              {
                device: 'window',
                size: 1440
              },
              {
                device: 'window',
                size: 1280
              },
              {
                aspect: '4x3',
                device: 'handset',
                label: 'tablet',
                landscape: true,
                size: 1024
              },
              {
                device: 'window',
                size: 960
              },
              {
                device: 'window',
                size: 840
              },
              {
                aspect: '4x3',
                device: 'handset',
                label: 'tablet',
                landscape: false,
                size: 720,
              },
              {
                device: 'window',
                size: 600
              },
              {
                aspect: '16x9',
                device: 'handset',
                label: 'phone',
                landscape: true,
                size: 600
              },
              {
                device: 'window',
                size: 480
              },
              {
                aspect: '16x9',
                device: 'handset',
                label: 'phone',
                size: 360
              }
            ],
            windowBreakpoints: [
              {
                label: 'xsmall',
                size: 480
              },
              {
                label: 'small',
                size: 600
              },
              {
                label: 'medium',
                size: 960
              },
              {
                label: 'large',
                size: 1280
              },
              {
                label: 'xlarge',
                size: Number.MAX_SAFE_INTEGER
              }
            ]
          });
          document.getElementById('resizerblock').appendChild(resizer);
        });
    </script>

    <div id="resizerblock" style="position:relative; min-height:400px;height: 100vh"></div>

    <%- @getBlock('scripts').add(@getUrl(@site.scripts)).add(@getUrl(@document.scripts)).toHTML() %>
</body>
</html>
